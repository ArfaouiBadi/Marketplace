{% extends 'base.html.twig' %}

{% block title %}MarketPlace - Accueil{% endblock %}

{% block body %}
    {# Hero Section #}
    <section class="bg-gradient-to-r from-primary-600 to-primary-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
            <div class="text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-6">Bienvenue sur MarketPlace</h1>
                <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
                    D√©couvrez des produits de qualit√© provenant de fournisseurs v√©rifi√©s. Achetez en toute confiance.
                </p>
                <div class="flex justify-center gap-4">
                    <a href="{{ path('product_list') }}" class="bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-primary-50 transition">
                        Explorer les produits
                    </a>
                    <a href="{{ path('app_register_supplier') }}" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white hover:text-primary-600 transition">
                        Devenir fournisseur
                    </a>
                </div>
            </div>
        </div>
    </section>

    {# Categories Section #}
    {% if categories is not empty %}
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">Cat√©gories</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {% for category in categories %}
                <a href="{{ path('category_show', {slug: category.slug}) }}" class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 text-center hover:shadow-md hover:border-primary-300 transition group">
                    <div class="text-3xl mb-3">üì¶</div>
                    <h3 class="font-semibold text-gray-900 group-hover:text-primary-600">{{ category.name }}</h3>
                    {% if category.description %}
                        <p class="text-sm text-gray-500 mt-1">{{ category.description|u.truncate(50) }}</p>
                    {% endif %}
                </a>
            {% endfor %}
        </div>
    </section>
    {% endif %}

    {# Latest Products Section #}
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="flex justify-between items-center mb-8">
            <h2 class="text-2xl font-bold text-gray-900">Derniers produits</h2>
            <a href="{{ path('product_list') }}" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                Voir tout ‚Üí
            </a>
        </div>

        {% if latestProducts is not empty %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% for product in latestProducts %}
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition group">
                        <div class="bg-gray-100 h-48 flex items-center justify-center overflow-hidden">
                            {% if product.image %}
                                <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" class="w-full h-full object-cover group-hover:scale-105 transition">
                            {% else %}
                                <span class="text-6xl">üì¶</span>
                            {% endif %}
                        </div>
                        <div class="p-4">
                            <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 mb-1">
                                <a href="{{ path('product_show', {id: product.id}) }}">{{ product.name }}</a>
                            </h3>
                            {% if product.category %}
                                <span class="inline-block bg-primary-50 text-primary-700 text-xs px-2 py-1 rounded-full mb-2">{{ product.category.name }}</span>
                            {% endif %}
                            <p class="text-sm text-gray-500 mb-3">{{ product.description|default('Aucune description')|u.truncate(80) }}</p>
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-bold text-primary-600">{{ product.price }} ‚Ç¨</span>
                                {% if product.stock > 0 %}
                                    <span class="text-xs text-green-600 font-medium">En stock</span>
                                {% else %}
                                    <span class="text-xs text-red-600 font-medium">Rupture</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
                <span class="text-4xl mb-4 block">üõçÔ∏è</span>
                <p class="text-gray-500 text-lg">Aucun produit disponible pour le moment.</p>
                <p class="text-gray-400 text-sm mt-2">Les fournisseurs ajouteront bient√¥t leurs produits !</p>
            </div>
        {% endif %}
    </section>
{% endblock %}
