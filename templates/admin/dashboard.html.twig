{% extends 'admin/base.html.twig' %}

{% block title %}Administration - MarketPlace{% endblock %}

{% block admin_content %}
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Tableau de bord</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <p class="text-sm text-gray-500 mb-1">Utilisateurs</p>
            <p class="text-3xl font-bold text-primary-600">{{ totalUsers }}</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <p class="text-sm text-gray-500 mb-1">Fournisseurs</p>
            <p class="text-3xl font-bold text-primary-600">{{ totalSuppliers }}</p>
            {% if pendingSuppliers > 0 %}
                <p class="text-xs text-yellow-600 mt-1">{{ pendingSuppliers }} en attente</p>
            {% endif %}
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <p class="text-sm text-gray-500 mb-1">Produits</p>
            <p class="text-3xl font-bold text-primary-600">{{ totalProducts }}</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <p class="text-sm text-gray-500 mb-1">Commandes</p>
            <p class="text-3xl font-bold text-primary-600">{{ totalOrders }}</p>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <p class="text-sm text-gray-500 mb-1">Chiffre d'affaires</p>
            <p class="text-3xl font-bold text-green-600">{{ totalRevenue }} €</p>
        </div>
    </div>

    {% if pendingSuppliers > 0 %}
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-6">
            <h3 class="font-semibold text-yellow-800 mb-2">Fournisseurs en attente</h3>
            <p class="text-sm text-yellow-700 mb-3">{{ pendingSuppliers }} fournisseur(s) attendent votre approbation.</p>
            <a href="{{ path('admin_suppliers') }}" class="text-yellow-800 font-medium text-sm hover:underline">Gérer les fournisseurs →</a>
        </div>
    {% endif %}
{% endblock %}
