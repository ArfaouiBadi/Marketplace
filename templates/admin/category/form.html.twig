{% extends 'admin/base.html.twig' %}

{% block title %}{{ isEdit ? 'Modifier' : 'Nouvelle' }} catégorie - Admin{% endblock %}

{% block admin_content %}
    <div class="mb-6">
        <a href="{{ path('admin_categories') }}" class="text-primary-600 hover:text-primary-700 text-sm font-medium">← Retour aux catégories</a>
    </div>

    <h1 class="text-2xl font-bold text-gray-900 mb-6">{{ isEdit ? 'Modifier la catégorie' : 'Nouvelle catégorie' }}</h1>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 max-w-lg">
        {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}

            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="flex gap-3">
                <button type="submit" class="bg-primary-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary-700 transition text-sm">
                    {{ isEdit ? 'Enregistrer' : 'Créer la catégorie' }}
                </button>
                <a href="{{ path('admin_categories') }}" class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-50 transition text-sm">
                    Annuler
                </a>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
