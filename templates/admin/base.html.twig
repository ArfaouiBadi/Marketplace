{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row gap-8">
        {# Admin Sidebar #}
        <aside class="w-full md:w-64 flex-shrink-0">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="font-semibold text-gray-900 mb-4">Administration</h3>
                <nav class="space-y-2">
                    <a href="{{ path('admin_dashboard') }}" class="block px-3 py-2 rounded-lg text-sm font-medium {% if app.request.attributes.get('_route') == 'admin_dashboard' %}bg-primary-50 text-primary-700{% else %}text-gray-600 hover:bg-gray-50{% endif %}">
                        Tableau de bord
                    </a>
                    <a href="{{ path('admin_users') }}" class="block px-3 py-2 rounded-lg text-sm font-medium {% if app.request.attributes.get('_route') starts with 'admin_user' %}bg-primary-50 text-primary-700{% else %}text-gray-600 hover:bg-gray-50{% endif %}">
                        Utilisateurs
                    </a>
                    <a href="{{ path('admin_suppliers') }}" class="block px-3 py-2 rounded-lg text-sm font-medium {% if app.request.attributes.get('_route') starts with 'admin_supplier' %}bg-primary-50 text-primary-700{% else %}text-gray-600 hover:bg-gray-50{% endif %}">
                        Fournisseurs
                    </a>
                    <a href="{{ path('admin_categories') }}" class="block px-3 py-2 rounded-lg text-sm font-medium {% if app.request.attributes.get('_route') starts with 'admin_categor' %}bg-primary-50 text-primary-700{% else %}text-gray-600 hover:bg-gray-50{% endif %}">
                        CatÃ©gories
                    </a>
                </nav>
            </div>
        </aside>

        {# Main content #}
        <div class="flex-1">
            {% block admin_content %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}
