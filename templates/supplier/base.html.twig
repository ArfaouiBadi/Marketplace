{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row gap-8">
        {# Supplier Sidebar #}
        <aside class="w-full md:w-64 flex-shrink-0">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <div class="mb-6">
                    <h3 class="font-semibold text-gray-900">Espace Fournisseur</h3>
                    <p class="text-xs text-gray-500 mt-1">{{ app.user.supplier.companyName|default('') }}</p>
                    {% if app.user.supplier and not app.user.supplier.isApproved %}
                        <span class="inline-block mt-2 bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">En attente d'approbation</span>
                    {% elseif app.user.supplier and app.user.supplier.isApproved %}
                        <span class="inline-block mt-2 bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Approuv√©</span>
                    {% endif %}
                </div>
                <nav class="space-y-2">
                    <a href="{{ path('supplier_dashboard') }}" class="block px-3 py-2 rounded-lg text-sm font-medium {% if app.request.attributes.get('_route') == 'supplier_dashboard' %}bg-primary-50 text-primary-700{% else %}text-gray-600 hover:bg-gray-50{% endif %}">
                        Tableau de bord
                    </a>
                    <a href="{{ path('supplier_products') }}" class="block px-3 py-2 rounded-lg text-sm font-medium {% if app.request.attributes.get('_route') starts with 'supplier_product' %}bg-primary-50 text-primary-700{% else %}text-gray-600 hover:bg-gray-50{% endif %}">
                        Mes Produits
                    </a>
                </nav>
            </div>
        </aside>

        {# Main content #}
        <div class="flex-1">
            {% block supplier_content %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}
