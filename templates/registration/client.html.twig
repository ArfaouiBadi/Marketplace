{% extends 'base.html.twig' %}

{% block title %}Inscription Client - MarketPlace{% endblock %}

{% block body %}
<div class="min-h-[70vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Inscription Client</h1>
            <p class="mt-2 text-sm text-gray-600">Créez votre compte pour commencer vos achats</p>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div>
                        {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>

                <div>
                    {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                <div>
                    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div>
                    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-sm'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <button type="submit" class="w-full bg-primary-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-primary-700 transition">
                    Créer mon compte
                </button>

            {{ form_end(form) }}

            <div class="mt-6 text-center text-sm text-gray-600">
                <p>Déjà un compte ? <a href="{{ path('app_login') }}" class="text-primary-600 hover:text-primary-700 font-medium">Se connecter</a></p>
                <p class="mt-2">Vous êtes fournisseur ? <a href="{{ path('app_register_supplier') }}" class="text-primary-600 hover:text-primary-700 font-medium">Inscription Fournisseur</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
