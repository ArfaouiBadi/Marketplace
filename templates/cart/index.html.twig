{% extends 'base.html.twig' %}

{% block title %}Mon Panier - MarketPlace{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Mon Panier</h1>

    {% if cart.items is not empty %}
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="text-left px-6 py-3 text-xs font-medium text-gray-500 uppercase">Produit</th>
                        <th class="text-center px-6 py-3 text-xs font-medium text-gray-500 uppercase">Prix unitaire</th>
                        <th class="text-center px-6 py-3 text-xs font-medium text-gray-500 uppercase">Quantit√©</th>
                        <th class="text-center px-6 py-3 text-xs font-medium text-gray-500 uppercase">Sous-total</th>
                        <th class="text-center px-6 py-3 text-xs font-medium text-gray-500 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for item in cart.items %}
                        <tr>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <span class="text-2xl">üì¶</span>
                                    <div>
                                        <a href="{{ path('product_show', {id: item.product.id}) }}" class="font-medium text-gray-900 hover:text-primary-600">
                                            {{ item.product.name }}
                                        </a>
                                        <p class="text-xs text-gray-500">{{ item.product.supplier.companyName }}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-center text-sm text-gray-700">{{ item.product.price }} ‚Ç¨</td>
                            <td class="px-6 py-4 text-center">
                                <form action="{{ path('cart_update', {id: item.id}) }}" method="POST" class="inline-flex items-center gap-2">
                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.product.stock }}"
                                           class="w-16 text-center py-1 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary-500">
                                    <button type="submit" class="text-primary-600 hover:text-primary-700 text-sm font-medium">Maj</button>
                                </form>
                            </td>
                            <td class="px-6 py-4 text-center text-sm font-semibold text-gray-900">{{ item.subtotal }} ‚Ç¨</td>
                            <td class="px-6 py-4 text-center">
                                <form action="{{ path('cart_remove', {id: item.id}) }}" method="POST" class="inline">
                                    <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
                <div class="flex justify-between items-center">
                    <span class="text-lg font-semibold text-gray-900">Total :</span>
                    <span class="text-2xl font-bold text-primary-600">{{ cart.total }} ‚Ç¨</span>
                </div>
            </div>
        </div>

        <div class="mt-6 flex justify-between items-center">
            <a href="{{ path('product_list') }}" class="text-primary-600 hover:text-primary-700 font-medium text-sm">
                ‚Üê Continuer les achats
            </a>
            <a href="{{ path('checkout_index') }}" class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition">
                Passer la commande
            </a>
        </div>
    {% else %}
        <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
            <span class="text-4xl mb-4 block">üõí</span>
            <p class="text-gray-500 text-lg">Votre panier est vide.</p>
            <a href="{{ path('product_list') }}" class="mt-4 inline-block text-primary-600 hover:text-primary-700 font-medium">
                D√©couvrir nos produits
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
